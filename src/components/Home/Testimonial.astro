---
interface Props {
    lft?: boolean;
    name: string;
    content: string;
}

const { name, content, lft = true } = Astro.props;
---

<div class={`my-2 flex flex-col ${lft ? "items-start text-left" : "items-end text-right"}`}>
    <p class="text-2xl italic mt-4">{content}</p>
    <p class="text-xl mt-2">{name}</p>
</div>
