---
import type { CollectionEntry } from "astro:content";

interface Props {
    lft?: boolean;
    testimodial: CollectionEntry<"testimonials">;
}

const { testimodial, lft = true } = Astro.props;
const { body: content } = testimodial;
const { name } = testimodial.data;
---

<div
    class={`my-2 flex flex-col ${
        lft ? "items-start text-left" : "items-end text-right"
    }`}
>
    <p class="text-2xl italic mt-4">{content}</p>
    <p class="text-xl mt-2">{name}</p>
</div>
