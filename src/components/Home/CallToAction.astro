---
import type { CollectionEntry } from "astro:content";
import PageTitle from "../Common/PageTitle.astro";

interface Props {
  cta: CollectionEntry<"call_to_actions">;
}

const { cta } = Astro.props;
const { slug, body } = cta;
const { title, url, buttonText } = cta.data;
---

<div class="flex flex-col py-8 text-black">
  <div id={slug} class="relative top-[-90px] h-30 w-full"></div>
  <div class="flex max-w-6xl lg:w-4/5 w-full m-auto px-4">
    <div class="flex-1 md:w-64 flex flex-col justify-center text-center">
      <p class="text-5xl font-bold mb-4">{title}</p>
      <p class="text-lg">
        {body}
      </p>
      <div class="mt-10 flex gap-4 justify-center flex-col md:flex-row">
        <a
          class="mt-auto text-center py-3 px-8 bg-primary hover:bg-primary-hover text-white ease-in duration-100"
          target="_blank"
          href={url}>{buttonText}</a
        >
      </div>
    </div>
  </div>
</div>
