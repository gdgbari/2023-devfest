---

import { WebsiteConfig } from "../../config";

---

<div class="flex items-center justify-around px-10 bg-amber-500 text-white flex-col sm:flex-row">
    {[
        ["participants", "community", WebsiteConfig.NUM_PARTECIPENTS],
        ["speakers", "speakers", WebsiteConfig.NUM_SPEAKERS],
        ["categories", "categories", WebsiteConfig.NUM_TALK_CATEGORIES],
        ["tracks", "tracks", WebsiteConfig.NUM_TRACKS]
    ].map( ([name, icon, num]:[string, string, number]) => {
        return <div class="flex text-xl items-center justify-center flex-col py-20">
            <img width="100px" height="100px" src={`/assets/vectors/${icon}.svg`} class="text-white fill-current pb-10" />
            <h2 class="font-bold text-6xl">{num}</h2>
            <span class="text-2xl">{name.toUpperCase().slice(0, 1)+name.slice(1)}</span>
        </div>
    })}
</div>
