---
import { getCollection } from "astro:content";
import SpeakerPreviewElement from "./SpeakerPreviewElement.astro";

let speakers = await getCollection("speakers");

if (speakers.length > 4) {
  speakers = speakers.slice(0, 4);
}
---

<div class="py-6 px-3">
  <h2 class="text-6xl mb-10 font-bold">Speakers</h2>

  <div class="grid md:grid-cols-4 sm:grid-cols-2 grid-flow-row gap-4 mt-5 mb-7">
    {
      speakers.map((s) => (
        <div class="mx-auto">
          <SpeakerPreviewElement speaker={s} />
        </div>
      ))
    }
  </div>

  <a class="py-2 px-4 rounded-r-sm hover:bg-amber-400/20 text-amber-600 ease-in duration-100" href="/speakers">See all Speakers</a>
</div>
