---
import { getCollection } from "astro:content";
import Testimonial from "./Testimonial.astro";
const testimonials = await getCollection("testimonials");
---

<div class="flex flex-col py-8 text-black">
  <div class="flex max-w-6xl lg:w-4/5 w-full m-auto px-4">
    <div class="flex-1 md:w-64 flex flex-col justify-center text-center">
      <slot name="title" />
      <slot name="description" />
    </div>
  </div>
  <div class="flex max-w-6xl mt-6 lg:w-4/5 w-full m-auto px-4">
    <div class="flex-1 md:w-64 flex flex-col justify-center text-center">
      <slot name="slot-subtitle" />
      {
        testimonials.map((t, i) => (
          <Testimonial testimodial={t} lft={i % 2 == 0} />
        ))
      }
    </div>
  </div>
</div>
